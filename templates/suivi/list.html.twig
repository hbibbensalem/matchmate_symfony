{% extends 'baseFront.html.twig' %}
{% block title %}D√©tails du Suivi{% endblock %}

{% block stylesheets %}
{{ parent() }}
<link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@400;600;700&display=swap" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

<style>
    :root {
        --primary-color: #10888D;
        --secondary-color: #ff7d19;
        --success-color: #2dce89;
        --light-color: #f8f9fa;
        --text-color: #333;
    }

    body {
        font-family: 'Quicksand', sans-serif;
        background-color: #f8f9fa;
        color: var(--text-color);
    }

    .card {
        border-radius: 16px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
        transition: 0.3s ease;
        background-color: #fffaf5;
    }

    .card:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 18px rgba(0, 0, 0, 0.08);
    }

    .card-header {
        background-color: #fff;
        padding: 1.5rem;
        border-bottom: 1px solid #e0e0e0;
        border-radius: 16px 16px 0 0;
    }

    .card-header h6 {
        font-size: 1.6rem;
        color: var(--primary-color);
        font-weight: 700;
    }

    .card-header p {
        font-size: 0.95rem;
    }

    .table th {
        background-color: var(--primary-color);
        color: white;
    }

    .table td {
        vertical-align: middle;
    }

    .badge.bg-gradient-warning {
        background: linear-gradient(87deg, #fbcf33 0, #f53939 100%);
        color: white;
    }

    .text-danger {
        color: #e74c3c;
        font-weight: bold;
    }

    .btn-outline-danger, .btn-outline-success {
        transition: 0.2s ease;
    }
    .header-image {
        width: 100%;
        height: 280px;
        background-image: url('https://images.unsplash.com/photo-1504674900247-0877df9cc836');
        background-size: cover;
        background-position: center;
        border-radius: 20px;
        margin-bottom: 1rem;
        position: relative;
    }

    .header-image::after {
        content: "ü•ó Gestion des r√©gimes alimentaires üçΩ";
        position: absolute;
        bottom: 1rem;
        left: 2rem;
        font-size: 1.8rem;
        color: white;
        font-weight: bold;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
    }

    .welcome-message {
        text-align: center;
        font-size: 1.2rem;
        font-weight: 600;
        color: var(--secondary-color);
        margin-bottom: 20px;
    }

    @media (max-width: 768px) {
        .header-image::after {
            font-size: 1.2rem;
        }
    }
</style>
{% endblock %}

{% block content %}
<body class="g-sidenav-show bg-gray-100">
  <div class="min-height-300 bg-dark position-absolute w-100"></div>
  
  <main class="main-content position-relative border-radius-lg">
    <!-- Navbar -->
    <nav class="navbar navbar-main navbar-expand-lg px-0 mx-4 shadow-none border-radius-xl" id="navbarBlur" data-scroll="false">
      <div class="container-fluid py-1 px-3">
       
        <nav aria-label="breadcrumb">
          
          <h6 class="font-weight-bolder text-white mb-0">D√©tails du R√©gime</h6>
        </nav>
      </div>
    </nav>
    <!-- End Navbar -->

    <div class="container-fluid py-4">
      <div class="row">
        <div class="col-12">
          <div class="header-image"></div>

          <div class="welcome-message">
            Bienvenue dans les d√©tails de Suivi  üìä 
          </div>

    <div class="container-fluid py-4">
      <div class="row">
        <div class="col-12">
          <div class="card mb-4">
            <div class="card-header pb-0 card-header-centered">
              <h6>Historique de vos suivis</h6>
            </div>
            <div class="card-body px-0 pt-0 pb-2">
              <div class="table-responsive p-3">
                <table class="table align-items-center mb-0">
                    <thead>
                        <tr>
                            <th>Suivi ID</th>
                            <th>User Id</th>
                            <th>Poids (kg)</th>
                            <th>Taille (cm)</th>
                            <th>Tour de taille (cm)</th>
                            <th>IMC</th>
                            <th>Date du suivi</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for suivi in suivis %}
                            <tr>
                                <td>{{ suivi.suivi_id }}</td>
                                 <td>{{ suivi.idUser.idUser }}</td>
                                <td>{{ suivi.poids }}</td>
                                <td>{{ suivi.taille }}</td>
                                <td>{{ suivi.tourDeTaille }}</td>
                                <td class="imc-cell">{{ suivi.imc }}</td>
                                <td class="date-cell">{{ suivi.dateSuivi ? suivi.dateSuivi|date('Y-m-d') : '' }}</td>
                                <td>
                                   
                                    <form method="post" action="{{ path('app_suivi_delete', { suivi_id: suivi.suivi_id }) }}" style="display:inline;" onsubmit="return confirm('√ätes-vous s√ªr de vouloir supprimer ce suivi ?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ suivi.suivi_id) }}">
                                        <button type="submit" class="btn btn-link text-danger p-0 ms-2">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="8" class="text-center">Aucun suivi enregistr√©</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
              </div>
            </div>
          </div>

          <div class="d-flex justify-content-between">
            <a href="{{ path('app_regime_listpremiumFront') }}" class="btn btn-outline-danger"><i class="fas fa-arrow-left"></i> Retour</a>
          </div>
        </div>
      </div>
    </div>
  </main>

  <div class="fixed-plugin">
    <!-- Fixed plugin content -->
  </div>
{% endblock %}

