{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
    document.addEventListener('DOMContentLoaded', function() {
        const searchInput = document.getElementById('searchInput');
        const userRows = document.querySelectorAll('tbody tr');

        // Recherche dans la table
        searchInput.addEventListener('input', function() {
            const searchTerm = this.value.toLowerCase().trim();
            let visibleCount = 0;

            userRows.forEach(row => {
                const searchData = row.textContent.toLowerCase();
                if (searchData.includes(searchTerm)) {
                    row.style.display = '';
                    visibleCount++;
                } else {
                    row.style.display = 'none';
                }
            });
        });

        {% if regimes is not empty %}
    // G√©n√©ration du graphique
    var ctx = document.getElementById('regimeStatsChart').getContext('2d');

    var objectifs = {};

    {% for regime in regimes %}
        objectifs["{{ regime.objectif|e('js') }}"] = (objectifs["{{ regime.objectif|e('js') }}"] || 0) + 1;
    {% endfor %}

    var labels = Object.keys(objectifs);
    var data = Object.values(objectifs);
    
    var colors = [
        'rgba(255, 107, 0, 0.7)',
        'rgba(14, 119, 125, 0.7)',
        'rgba(245, 54, 92, 0.7)',
        'rgba(32, 201, 151, 0.7)',
        'rgba(23, 105, 255, 0.7)'
    ];

    new Chart(ctx, {
        type: 'bar',
        data: {
            labels: labels,
            datasets: [{
                label: 'Nombre de r√©gimes',
                data: data,
                backgroundColor: colors,
                borderColor: colors.map(color => color.replace('0.7', '1')),
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: { display: false },
                tooltip: {
                    callbacks: {
                        label: function(context) {
                            return context.parsed.y + ' r√©gimes';
                        }
                    }
                }
            },
            scales: {
                y: {
                    beginAtZero: true,
                    title: { display: true, text: 'Nombre de r√©gimes' },
                    ticks: { precision: 0 }
                },
                x: {
                    grid: { display: false }
                }
            }
        }
    });
{% endif %}

    });
    </script>
