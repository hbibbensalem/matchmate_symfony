{% extends 'baseFront.html.twig' %}

{% block title %}Ajouter un Régime{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@400;600;700&display=swap" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

  <style>
    /* Couleurs de base */
    :root {
      --primary-color: #10888D; /* Bleu-vert */
      --secondary-color: #ff7d19; /* Orange */
      --dark-color: #000000; /* Noir */
      --light-color: #f8f9fa;
    }

    /* Style général */
    .main-content {
      background-color: #f8f9fa;
    }

    /* Titres */
    .main-title {
      color: var(--primary-color);
      font-weight: 600;
      text-align: center;
      margin-bottom: 2rem;
      font-size: 1.8rem;
    }

    .section-title {
      color: var(--secondary-color);
      font-weight: 600;
      margin: 2rem 0 1.5rem 0;
      text-align: left;
      border-bottom: 2px solid var(--secondary-color);
      padding-bottom: 0.5rem;
      display: inline-block;
    }

    /* Carte */
    .card {
      border-radius: 10px;
      box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.1);
      background: #ffffff;
      padding: 20px;
    }

    .card-header {
      background: transparent;
      padding: 0;
      border-bottom: none;
      text-align: center;
    }

    .card-body {
      padding: 2rem;
    }

    /* Formulaire */
    .form-label {
      color: var(--dark-color);
      font-weight: 500;
      margin-bottom: 0.5rem;
      display: block;
    }

    .form-control {
      border: 2px solid var(--primary-color);
      border-radius: 8px;
      padding: 0.75rem 1rem;
      transition: all 0.3s;
    }

    .form-control:focus {
      border-color: var(--secondary-color);
      box-shadow: 0 0 0 3px rgba(255, 125, 25, 0.2);
    }

    /* Icônes */
    .form-icon {
      font-size: 1.5rem;
      color: var(--primary-color);
      margin-right: 0.5rem;
    }

    /* Boutons */
    .btn {
      border-radius: 8px;
      font-weight: 600;
      padding: 0.75rem 1.5rem;
      transition: all 0.3s;
      border: none;
    }

    .bg-gradient-primary {
      background: var(--primary-color);
      color: white;
    }

    .bg-gradient-primary:hover {
      background: #0d7277;
      transform: translateY(-2px);
    }

    .bg-gradient-secondary {
      background: #6c757d;
      color: white;
    }

    .bg-gradient-secondary:hover {
      background: #5a6268;
      transform: translateY(-2px);
    }
    .header-image {
        width: 100%;
        height: 280px;
        background-image: url('https://images.unsplash.com/photo-1504674900247-0877df9cc836');
        background-size: cover;
        background-position: center;
        border-radius: 20px;
        margin-bottom: 1rem;
        position: relative;
    }
    /* Responsive */
    @media (max-width: 768px) {
      .row > div {
        margin-bottom: 1rem;
      }
    }
  </style>
{% endblock %}

{% block body %}
<body class="g-sidenav-show bg-gray-100">
  <div class="min-height-300 bg-dark position-absolute w-100"></div>

  <main class="main-content position-relative border-radius-lg">
    <!-- Navbar -->
    <nav class="navbar navbar-main navbar-expand-lg px-0 mx-4 shadow-none border-radius-xl" id="navbarBlur" data-scroll="false">
      <div class="container-fluid py-1 px-3">
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb bg-transparent mb-0 pb-0 pt-1 px-0 me-sm-6 me-5">
            <li class="breadcrumb-item text-sm"><a class="opacity-5 text-white" href="{{ path('app_regime_list') }}">Régimes</a></li>
            <li class="breadcrumb-item text-sm text-white active">Ajouter</li>
          </ol>
        </nav>
      </div>
    </nav>

    <div class="container-fluid py-4">
      <div class="row justify-content-center">
        <div class="col-12 col-lg-8">
          <div class="card mb-4">
            <div class="card-header pb-0">
              <h1 class="main-title">Création d'un nouveau régime</h1>
            </div>
            <div class="card-body px-0 pt-0 pb-2">
              <div class="row mb-4">
                <div class="col-12">
                  <div class="header-image"></div>
                </div>
              </div>

              {{ form_start(form) }}
                <!-- Le reste de votre formulaire reste inchangé -->
                <div class="row">
                  <div class="col-md-6">
                    <div class="form-group">
                      <div class="d-flex align-items-center">
                        <i class="fas fa-bullseye form-icon"></i>
                        {{ form_label(form.objectif, 'Objectif', {'label_attr': {'class': 'form-label'}}) }}
                      </div>
                      {{ form_widget(form.objectif, {'attr': {'class': 'form-control'}}) }}
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group">
                      <div class="d-flex align-items-center">
                        <i class="fas fa-user form-icon"></i>
                        {{ form_label(form.idUser, 'Utilisateur', {'label_attr': {'class': 'form-label'}}) }}
                      </div>
                      {{ form_widget(form.idUser, {'attr': {'class': 'form-control'}}) }}
                    </div>
                  </div>
                </div>

                <h4 class="section-title">Informations Nutritionnelles</h4>

                <div class="row">
                  <div class="col-md-3">
                    <div class="form-group">
                      <div class="d-flex align-items-center">
                        <i class="fas fa-fire form-icon"></i>
                        {{ form_label(form.calories_journalieres, 'Calories/j', {'label_attr': {'class': 'form-label'}}) }}
                      </div>
                      {{ form_widget(form.calories_journalieres, {'attr': {'class': 'form-control'}}) }}
                    </div>
                  </div>
                  <div class="col-md-3">
                    <div class="form-group">
                      <div class="d-flex align-items-center">
                        <i class="fas fa-dumbbell form-icon"></i>
                        {{ form_label(form.proteines, 'Protéines (g)', {'label_attr': {'class': 'form-label'}}) }}
                      </div>
                      {{ form_widget(form.proteines, {'attr': {'class': 'form-control'}}) }}
                      
                      {# Ajout pour afficher l'erreur #}
                      {% if form_errors(form.proteines) %}
                        <div class="invalid-feedback d-block">
                          {{ form_errors(form.proteines) }}
                        </div>
                      {% endif %}
                    </div>
                  </div>
                  <div class="col-md-3">
                    <div class="form-group">
                      <div class="d-flex align-items-center">
                        <i class="fas fa-bread-slice form-icon"></i>
                        {{ form_label(form.glucides, 'Glucides (g)', {'label_attr': {'class': 'form-label'}}) }}
                      </div>
                      {{ form_widget(form.glucides, {'attr': {
                        'class': 'form-control',
                        'min': 50,
                        'max': 500
                    }}) }}                    </div>
                  </div>
                  <div class="col-md-3">
                    <div class="form-group">
                      <div class="d-flex align-items-center">
                        <i class="fas fa-cogs form-icon"></i>
                        {{ form_label(form.lipides, 'Lipides (g)', {'label_attr': {'class': 'form-label'}}) }}
                      </div>
                      {{ form_widget(form.lipides, {'attr': {
                        'class': 'form-control',
                        'min': 10,
                        'max': 100
                    }}) }}
                    </div>
                  </div>
                </div>

                <h4 class="section-title">Période</h4>

                <div class="row">
                  <div class="col-md-6">
                    <div class="form-group">
                      <div class="d-flex align-items-center">
                        <i class="fas fa-calendar-alt form-icon"></i>
                        {{ form_label(form.date_debut, 'Date début', {'label_attr': {'class': 'form-label'}}) }}
                      </div>
                      {{ form_widget(form.date_debut, {'attr': {'class': 'form-control'}}) }}
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group">
                      <div class="d-flex align-items-center">
                        <i class="fas fa-calendar-check form-icon"></i>
                        {{ form_label(form.date_fin, 'Date fin', {'label_attr': {'class': 'form-label'}}) }}
                      </div>
                      {{ form_widget(form.date_fin, {'attr': {'class': 'form-control'}}) }}
                    </div>
                  </div>
                </div>

                <div class="row mt-4">
                  <div class="col-md-12">
                    <div class="form-group">
                      <div class="d-flex align-items-center">
                        <i class="fas fa-check-circle form-icon"></i>
                        {{ form_label(form.statut, 'Statut', {'label_attr': {'class': 'form-label'}}) }}
                      </div>
                      {{ form_widget(form.statut, {'attr': {'class': 'form-control'}}) }}
                    </div>
                  </div>
                </div>

                <div class="mt-5 d-flex justify-content-end">
                  <button type="submit" class="btn bg-gradient-primary me-2">
                    <i class="fas fa-save me-2"></i>Enregistrer
                  </button>
                  <a href="{{ path('app_regime_list') }}" class="btn bg-gradient-secondary">
                    <i class="fas fa-times me-2"></i>Annuler
                  </a>
                </div>
              {{ form_end(form) }}
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</body>
{% endblock %}
