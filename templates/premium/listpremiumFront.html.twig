{% extends 'baseFront.html.twig' %}
{% block title %}Joueurs Premium - R√©gimes{% endblock %}

{% block stylesheets %}
{{ parent() }}
<link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@400;600;700&display=swap" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

<style>
    :root {
        --primary-color: #10888D;
        --secondary-color: #ff7d19;
        --success-color: #2dce89;
        --light-color: #f8f9fa;
        --text-color: #333;
    }

    body {
        font-family: 'Quicksand', sans-serif;
        background-color: #f8f9fa;
        color: var(--text-color);
    }

    .card {
        border-radius: 16px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
        transition: 0.3s ease;
        background-color: #fffaf5;
    }

    .card:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 18px rgba(0, 0, 0, 0.08);
    }

    .card-header {
        background-color: #fff;
        padding: 1.5rem;
        border-bottom: 1px solid #e0e0e0;
        border-radius: 16px 16px 0 0;
    }

    .card-header h6 {
        font-size: 1.6rem;
        color: var(--primary-color);
        font-weight: 700;
    }

    .card-header p {
        font-size: 0.95rem;
    }

    .table th {
        background-color: var(--primary-color);
        color: white;
    }

    .table td {
        vertical-align: middle;
    }

    .badge.bg-gradient-warning {
        background: linear-gradient(87deg, #fbcf33 0, #f53939 100%);
        color: white;
    }

    .text-danger {
        color: #e74c3c;
        font-weight: bold;
    }

    .btn-outline-danger, .btn-outline-success {
        transition: 0.2s ease;
    }

    .header-image {
        width: 100%;
        height: 280px;
        background-image: url('https://images.unsplash.com/photo-1504674900247-0877df9cc836');
        background-size: cover;
        background-position: center;
        border-radius: 20px;
        margin-bottom: 1rem;
        position: relative;
    }

    .header-image::after {
        content: "ü•ó Gestion des r√©gimes alimentaires üçΩ";
        position: absolute;
        bottom: 1rem;
        left: 2rem;
        font-size: 1.8rem;
        color: white;
        font-weight: bold;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
    }

    .welcome-message {
        text-align: center;
        font-size: 1.2rem;
        font-weight: 600;
        color: var(--secondary-color);
        margin-bottom: 20px;
    }
    .btn-fixed-width {
    width: 120px !important; /* m√™me largeur pour tous */
} 

    @media (max-width: 768px) {
        .header-image::after {
            font-size: 1.2rem;
        }
    }

    .btn-custom-hover {
        border: 2px solid #198754;
        color: #198754;
        background-color: transparent;
        border-radius: 30px;
        transition: all 0.3s ease;
    }

    .btn-custom-hover:hover {
        background-color: orange;
        color: white;
        border-color: orange;
    }
</style>
{% endblock %}

{% block content %}
<div class="container py-4">
    <div class="header-image"></div>

    <div class="welcome-message">
        Bienvenue sur l‚Äôespace d√©di√© √† vos champions premium ‚ú®
    </div>
    
    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <div>
                <h6>Liste des Joueurs Premium</h6>
                <p><i class="bi bi-award-fill text-warning"></i> Total: <strong>{{ users|length }}</strong></p>
            </div>
            
<div class="d-flex justify-content-end align-items-center ps-4">
    <a href="{{ path('app_regime_pdf') }}" class="btn btn-custom-hover px-4 py-2">
        <i class="bi bi-file-earmark-arrow-down me-2"></i> T√©l√©charger PDF
    </a>
</div>
        </div>

        <div class="card-body px-0 pt-0 pb-2">
            <div class="table-responsive p-0">
                <table class="table table-hover align-items-center mb-0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th><i class="fas fa-user"></i> Nom & Pr√©nom</th>
                            <th><i class="fas fa-ruler-vertical"></i> Taille</th>
                            <th><i class="fas fa-weight"></i> Poids</th>
                            <th><i class="fas fa-tape"></i> Tour de taille</th>
                            <th><i class="fas fa-utensils"></i> R√©gime</th>
                            <th>Suivi</th>
                        </tr>
                    </thead>
                    <tbody id="userTableBody">
                        {% for user in users %}
                        <tr class="user-row" data-search="{{ user.nomUser|lower }} {{ user.prenomUser|lower }}">
                            <td>{{ user.idUser }}</td>
                            <td>
                                <strong>{{ user.nomUser }} {{ user.prenomUser }}</strong><br>
                                <small class="text-muted">{{ user.emailUser }}</small><br>
                                {% if user.IsPremium == '1' %}
                                <span class="badge bg-gradient-warning">Premium</span>
                                {% endif %}
                            </td>
                            <td>
                                {{ user.taille ?: '<span class="text-danger">Non renseign√©</span>'|raw }} cm
                            </td>
                            <td>
                                {{ user.poids ?: '<span class="text-danger">Non renseign√©</span>'|raw }} kg
                            </td>
                            <td>
                                {{ user.Tour_de_taille ?: '<span class="text-danger">Non renseign√©</span>'|raw }} cm
                            </td>
                            <td>
                                {% if user.regimes|length > 0 %}
                                <div class="d-flex align-items-center">
                                    <a href="{{ path('app_regime_list_by_user', {'id': user.idUser }) }}" class="btn btn-outline-success btn-sm btn-fixed-width mb-2 me-2">
                                        <i class="fas fa-eye"></i> Voir
                                    </a>
                                    <span class="text-success"><i class="fas fa-check-circle"></i> {{ user.regimes|length }}</span>
                                </div>
                                {% else %}
                                <a href="{{ path('app_regime_new', {'id': user.idUser }) }}" class="btn btn-outline-danger btn-sm btn-fixed-width mb-2 me-2">
                                    <i class="fas fa-plus"></i> Ajouter
                                </a>
                                    <span class="text-danger"><i class="fas fa-times-circle"></i> Aucun</span>
                                {% endif %}
                            </td>
                            <td>
                                {% if user.suivis|length > 0 %}
                                <div class="d-flex align-items-center">
                                    <a href="{{ path('app_suivi_list_by_user', {'id': user.idUser }) }}" class="btn btn-outline-success btn-sm btn-fixed-width mb-2 me-2">
                                        <i class="fas fa-eye"></i> Voir
                                    </a>
                                    <span class="text-success ms-2">
                                        <i class="fas fa-check-circle"></i> {{ user.suivis|length }}
                                    </span>
                                </div>
                                {% else %}
                                    <span class="text-muted"><i class="fas fa-info-circle"></i> Indisponible</span>
                                {% endif %}
                            </td>
                            
                            <td></td>
                        </tr>
                        {% else %}
                        <tr>
                            <td colspan="7" class="text-center text-muted">Aucun joueur premium trouv√©.</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
    document.getElementById('searchInput').addEventListener('keyup', function () {
        const value = this.value.toLowerCase();
        document.querySelectorAll('.user-row').forEach(row => {
            const searchValue = row.getAttribute('data-search');
            row.style.display = searchValue.includes(value) ? '' : 'none';
            
        });
        
    });
</script>
{% endblock %}
    