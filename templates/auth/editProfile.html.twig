                    <small class="text-muted d-block mt-2">Actuelle: {{ user.photoUser }}</small>
                {% endif %}
                <div class="invalid-feedback">
                    {{ form_errors(form.photo_user) }}
                </div>
            </div>
            
       
            
            <div class="mb-4">
              {{ form_label(form.max_distance_user, 'Distance maximale (km)', {'label_attr': {'class': 'form-label'}}) }}
              {{ form_widget(form.max_distance_user, {'attr': {'class': 'form-control'}}) }}
              <div class="invalid-feedback">
                {{ form_errors(form.max_distance_user) }}
              </div>
            </div>
         
            <button type="submit" class="btn btn-save mt-3">
              <i class="fas fa-save me-2"></i>Enregistrer les modifications
            </button>
       
        </div>
      </div>
      
      <div class="col-lg-4">
        <!-- Preferences Section -->
        <div class="profile-card mb-4">
          <h4 class="section-title"><i class="fas fa-cog me-2"></i>Préférences</h4>
          
          <div class="mb-4">
            {{ form_label(form.niveau_joueur, 'Niveau de jeu', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.niveau_joueur, {'attr': {'class': 'form-select'}}) }}
            <div class="invalid-feedback">
                {{ form_errors(form.niveau_joueur) }}
            </div>
        </div>
          
        </div>
        
        <!-- Security Section -->
