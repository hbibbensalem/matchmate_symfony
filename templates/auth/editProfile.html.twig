          <h4 class="section-title"><i class="fas fa-shield-alt me-2"></i>Sécurité</h4>
          
          <div class="mb-4">
            {{ form_label(form.password_user, 'Nouveau mot de passe', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.password_user, {'attr': {
              'class': 'form-control',
              'placeholder': 'Laissez vide pour ne pas changer'
            }}) }}
            <small class="text-muted">Minimum 6 caractères</small>
            <div class="invalid-feedback">
              {{ form_errors(form.password_user) }}
            </div>
          </div>
          
          <hr class="my-4">
          
          <div class="d-flex justify-content-between align-items-center">
            <div>
              <h6 class="mb-1">Connexion à deux facteurs</h6>
              <small class="text-muted">Pour une sécurité renforcée</small>
            </div>
            <div class="form-check form-switch">
              <input 
                  class="form-check-input" 
                  type="checkbox" 
                  role="switch" 
                  id="toggle2FA"
                  {{ user.isTwoFactorEnabled ? 'checked' : '' }}  >
          </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{{ form_end(form) }}
<script src="{{ asset('front/bootstrap/js/bootstrap.bundle.min.js') }}"></script>
<script>
  document.addEventListener('DOMContentLoaded', function() {


    const toggle2FA = document.getElementById('toggle2FA');
    const email2faField = document.getElementById('email2faField');


    if (toggle2FA && email2faField) {
        toggle2FA.addEventListener('change', function() {
            // Affiche ou masque le champ email
            email2faField.style.display = this.checked ? 'block' : 'none';
        });
    }
    // Animation for file upload
    const fileUploads = document.querySelectorAll('.file-upload-input');
    fileUploads.forEach(input => {
      input.addEventListener('change', function() {
        const label = this.closest('.file-upload').querySelector('.file-upload-label');
        if (this.files.length > 0) {
          label.innerHTML = `<i class="fas fa-check me-2"></i>${this.files[0].name}`;
          label.style.backgroundColor = '#E3F9F5';
        } else {
          label.innerHTML = '<i class="fas fa-camera me-2"></i>Changer';
          label.style.backgroundColor = '#F1F5F9';
        }
      });
    });
    
    // Profile avatar hover effect
    const avatar = document.querySelector('.profile-avatar');
    if (avatar) {
      avatar.addEventListener('mouseenter', function() {
        this.style.transform = 'scale(1.05)';
        this.style.boxShadow = '0 8px 25px rgba(0,0,0,0.15)';
      });
      
      avatar.addEventListener('mouseleave', function() {
        this.style.transform = 'scale(1)';
        this.style.boxShadow = '0 5px 15px rgba(0,0,0,0.1)';
      });
    }
    
    // Enable Bootstrap form validation
    (function () {
      'use strict'
      
      const forms = document.querySelectorAll('.needs-validation')
      
      Array.from(forms).forEach(form => {
        form.addEventListener('submit', event => {
          if (!form.checkValidity()) {
            event.preventDefault()
            event.stopPropagation()
          }
          
          form.classList.add('was-validated')
        }, false)
      })
    })()
  });
</script>
</body>
</html>