  <script>
    document.addEventListener('DOMContentLoaded', function() {

      const roleSelector = document.querySelector('.role-selector');
      if (roleSelector) {
        roleSelector.addEventListener('change', function() {
            toggleFields();
        });
    }
    
    // Initialisez les champs au chargement
    toggleFields();



    function toggleFields() {
        const role = document.querySelector('#{{ form.role.vars.id }}').value;
        
        // Champs PLAYER
        const playerFields = document.querySelectorAll('#player-fields, #premium-field');
        // Champs NUTRITIONIST
        const nutritionistFields = document.querySelectorAll('#experience-field, #salaire-field');
        
        // Masquer tous les champs d'abord
        playerFields.forEach(field => field.style.display = 'none');
        nutritionistFields.forEach(field => field.style.display = 'none');
        
        // Afficher les champs selon le rôle
        if (role === 'PLAYER') {
            playerFields.forEach(field => {
                field.style.display = 'block';
                gsap.from(field, {duration: 0.3, opacity: 0, y: 10});
            });
        } else if (role === 'NUTRITIONIST') {
            nutritionistFields.forEach(field => {
                field.style.display = 'block';
                gsap.from(field, {duration: 0.3, opacity: 0, y: 10});
            });
        }
    }

    document.querySelector('#{{ form.role.vars.id }}').addEventListener('change', toggleFields);
    
    // Initialiser l'état des champs au chargement
    toggleFields();
    
    // Écouter les changements du rôle
    document.querySelector('#{{ form.role.vars.id }}').addEventListener('change', toggleFields);
    
    // Animation pour l'apparition des champs
    function animateFields(fields) {
        gsap.from(fields, {
            duration: 0.5,
            opacity: 0,
            y: 20,
            stagger: 0.1,
            ease: "power2.out"
        });
    }
      // Animation au chargement
      gsap.from(".form-card", {
        duration: 0.8,
        y: 50,
        opacity: 0,
        ease: "power3.out"
      });
      
      // Toggle password visibility
      const togglePassword = document.querySelector('#togglePassword');
      if (togglePassword) {
        togglePassword.addEventListener('click', function() {
          const passwordField = document.querySelector('#{{ form.password_user.vars.id }}');
          const type = passwordField.getAttribute('type') === 'password' ? 'text' : 'password';
          passwordField.setAttribute('type', type);
          this.innerHTML = type === 'password' ? '<i class="far fa-eye"></i>' : '<i class="far fa-eye-slash"></i>';
        });
      }
      
      // Photo preview
      const photoInput = document.querySelector('#{{ form.photo_user.vars.id }}');
      const photoPreview = document.getElementById('photoPreview');
      const photoLabel = document.getElementById('photoLabel');
      
      if (photoInput) {
        photoInput.addEventListener('change', function(event) {
          const file = event.target.files[0];
          if (file) {
            const reader = new FileReader();
            reader.onload = function(e) {
              photoPreview.src = e.target.result;
              photoPreview.style.display = 'block';
              photoLabel.textContent = file.name;
              
              // Simulate upload progress
              const progressContainer = photoInput.closest('.file-upload-wrapper').querySelector('.progress-container');
              const progressBar = progressContainer.querySelector('.progress-bar');
              
              progressContainer.style.display = 'block';
              let progress = 0;
              const interval = setInterval(() => {
                progress += 10;
                progressBar.style.width = progress + '%';
                if (progress >= 100) {
                  clearInterval(interval);
                  setTimeout(() => {
                    progressContainer.style.display = 'none';
                  }, 500);
                }
              }, 100);
            };
            reader.readAsDataURL(file);
          }
        });
      }
      
      // Pièce jointe label update
      const pieceJointeInput = document.querySelector('#{{ form.piece_jointe.vars.id }}');
      const pieceJointeLabel = document.getElementById('pieceJointeLabel');
      
      if (pieceJointeInput) {
        pieceJointeInput.addEventListener('change', function(event) {
          const file = event.target.files[0];
          if (file) {
            pieceJointeLabel.textContent = file.name;
            
            // Simulate upload progress
            const progressContainer = pieceJointeInput.closest('.file-upload-wrapper').querySelector('.progress-container');
            const progressBar = progressContainer.querySelector('.progress-bar');
            
            progressContainer.style.display = 'block';
            let progress = 0;
            const interval = setInterval(() => {
              progress += 10;
              progressBar.style.width = progress + '%';
              if (progress >= 100) {
                clearInterval(interval);
                setTimeout(() => {
                  progressContainer.style.display = 'none';
                }, 500);
              }
            }, 100);
          }
        });
      }
      
      // Form submission animation
      const form = document.getElementById('register-form');
      if (form) {
        form.addEventListener('submit', function() {
          const submitBtn = this.querySelector('.btn-submit');
          const submitText = submitBtn.querySelector('.submit-text');
          const spinner = submitBtn.querySelector('.spinner-border');
          
          submitText.textContent = 'Création du compte...';
          spinner.classList.remove('d-none');
          submitBtn.disabled = true;
          
          // Animation
          gsap.to(submitBtn, {
            scale: 0.98,
            duration: 0.3,
            ease: "power2.inOut"
          });
        });
      }
      
      // Floating labels for select elements
      const selectElements = document.querySelectorAll('.form-select');
      selectElements.forEach(select => {
        select.addEventListener('change', function() {
          if (this.value) {
            this.classList.add('has-value');
          } else {
            this.classList.remove('has-value');
          }
        });
        
        // Trigger change event on load if value exists
        if (select.value) {
          select.dispatchEvent(new Event('change'));
        }
      });
      
      // Add hover effect to form sections
      const formSections = document.querySelectorAll('.form-section');
      formSections.forEach(section => {
        section.addEventListener('mouseenter', function() {
          gsap.to(this, {
            y: -3,
            duration: 0.3,
            ease: "power2.out"
          });
        });
        
        section.addEventListener('mouseleave', function() {
          gsap.to(this, {
            y: 0,
            duration: 0.3,
            ease: "power2.out"
          });
        });
      });
    });
  </script>
